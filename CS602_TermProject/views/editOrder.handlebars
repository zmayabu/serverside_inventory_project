<h2>Edit Order {{order._id}}</h2>

{{#if order}}
<form action="/admin/orders/edit/{{order._id}}" method="POST">
    <input type="hidden" name="customerId" value="{{order.customerId}}" />

    {{#each order.items}}
        <div>
            <input type="hidden" name="productId" value="{{this.productId}}" />
            Product: <input type="text" name="name" value="{{this.name}}" />
            Quantity: <input type="number" name="quantity" value="{{this.quantity}}" />
            Price: <input type="number" step="0.01" name="price" value="{{this.price}}" />
        </div>
    {{/each}}

    <button type="submit">Update Order</button>
</form>

<a href="/admin/customer/{{order.customerId}}">Cancel</a>
{{else}}
<p>Order not Found</p>
{{/if}}
